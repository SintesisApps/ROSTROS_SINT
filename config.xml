<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.Sintesis.App"
        version   = "1.0">
    <name>ROSTROS SINT</name>

    <description>
        Rostros logo sintesis
    </description>

    <author href="http://sintesis.mx" email="admin-web@sintesisdigital.com.mx">
        Rostros logo sintesis
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
	<feature name="http://api.phonegap.com/1.0/battery"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	

   <preference name="phonegap-version" value="2.7.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />
	 <preference name="webviewbounce" value="false" />
	<preference name="UIWebViewBounce" value="true" />
	<preference name="HideKeyboardFormAccessoryBar" value="false" />
	  <preference name="stay-in-webview" value="false" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="stay-in-webview" value="true" />
	 <preference name="ios-statusbarstyle" value="black-translucen" />

    <icon src="img/iconos/icon.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="img/iconos/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="img/iconos/icon@2x.png"         gap:platform="ios"        width="114" height="114" />
	<icon src="img/iconos/icon-72@2x.png"         gap:platform="ios"        width="144" height="144" />
	<icon src="img/iconos/iTunesArtwork.png"         gap:platform="ios"        width="512" height="512" />
    <icon src="img/iconos/iTunesArtwork@2x.png"         gap:platform="ios"        width="1024" height="1024" />
	
	<gap:splash src="img/splashscreen/Default-Portrait@2x~ipad.png"     gap:platform="ios"     width="1536" height="2008" />
<gap:splash src="img/splashscreen/Default-Landscape@2x~ipad.png"     gap:platform="ios"     width="2048" height="1496" />
<gap:splash src="img/splashscreen/mdpi.png"      gap:platform="ios"     width="1024" height="768" />
	<gap:splash src="img/splashscreen/mdpi_v.png"      gap:platform="ios"     width="768" height="1024" />

	
	
	
  
	<plugin name="NetworkStatus" value="CDVConnection" />
	<plugin name="SplashScreen" value="CDVSplashScreen" />
	<plugin name="SplashScreen" value="org.apache.cordova.SplashScreen"/>
	<plugin name="Echo" value="Echo" onload="true" />
	<plugin name="service_name" value="PluginClassName" />


	
	<access origin="*" />
</widget>