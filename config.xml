<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.rostros.App"
        version   = "1.0">
    <name>ROSTROS SINT</name>

    <description>
        Rostros logo sintesis
    </description>

    <author href="http://sintesis.mx" email="admin-web@sintesisdigital.com.mx">
        Rostros logo sintesis
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
	<feature name="http://api.phonegap.com/1.0/battery"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	

    <preference name="phonegap-version" value="2.7.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="tablet" />
    <preference name="fullscreen"       value="true" />
	 <preference name="DisallowOverscroll" value="true" />
	<preference name="stay-in-webview" value="true" />
	 <preference name="ios-statusbarstyle" value="black-translucen" />

    <icon src="img/iconos/icon.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="img/iconos/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="img/iconos/icon@2x.png"         gap:platform="ios"        width="114" height="114" />
	<icon src="img/iconos/icon-72@2x.png"         gap:platform="ios"        width="144" height="144" />
	<icon src="img/iconos/iTunesArtwork.png"         gap:platform="ios"        width="512" height="512" />
    <icon src="img/iconos/iTunesArtwork@2x.png"         gap:platform="ios"        width="1024" height="1024" />

	
	
	
   <plugin name="NetworkStatus" value="CDVConnection" />
	<plugin name="SplashScreen" value="CDVSplashScreen" />


	
	<access origin="*" />
</widget>